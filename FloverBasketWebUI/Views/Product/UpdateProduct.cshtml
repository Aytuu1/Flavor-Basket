@model UpdateProductDto
@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="ProductID" />
						<div class="card-body">
							<div class="form-group">
								<label for="CategoryName">Ürün Adı</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productname">
							</div>

							<div class="form-group">
								<label for="Price">Ürün Fiyatı</label>
								<input type="text" class="form-control" asp-for="Price" id="price">
							</div>

							<div class="form-group">
								<label for="ImageUrl">Ürün Görselini Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
							</div>

							<div class="form-group">
								<label for="CategoryName">Ürün Kategorisini Seçiniz</label>
								@Html.DropDownListFor(x => x.CategoryID, (IEnumerable<SelectListItem>)ViewBag.CategoryItem, new { @class = "form-control" })
							</div>

							<div class="form-group">
								<label for="Description">Ürün Açıklamasını Giriniz.</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-success">Kaydet</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>





