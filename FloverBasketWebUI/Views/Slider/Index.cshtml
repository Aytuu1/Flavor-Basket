@model List<ResultSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan Alan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Anasayfada Öne çıkan alan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th>#</th>
									<th>Başlık 1</th>
									<th>Başlık 2</th>
									<th>Başlık 3</th>
									<th>Açıklama 1</th>
									<th>Açıklama 2</th>
									<th>Açıklama 3</th>
									<th>Sil</th>
									<th>Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SliderID</td>
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.Title3</td>
										<td>@item.Description1</td>
										<td>@item.Description2</td>
										<td>@item.Description3</td>
										<td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-primary">Sil</a></td>
										<td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-primary">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Slider/CreateSlider" class="btn btn-secondary">Yeni Öne Çıkan Alan Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



