@model CreateMailDto
@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
  <div class="container-fluid">
    <h4 class="page-title">Mail İşlemleri</h4>
    <div class="row">
      <div class="col-md-12">
        <form method="post">
          <div class="card">
            <div class="card-header">
              <div class="card-title">Mail Gönderme Sayfası</div>
            </div>
            <div class="card-body">
              <div class="form-group">
                <label for="ReceiverMail">Alıcı Mail Adresi</label>
                <input type="text" class="form-control" asp-for="ReceiverMail" id="ReceiverMail">
              </div>

              <div class="form-group">
                <label for="Subject">Konu</label>
                <input type="text" class="form-control" asp-for="Subject" id="Subject">
              </div>


              <div class="form-group">
                <label for="Body">Mesajınız</label>
                <textarea id="Body" rows="5" asp-for="Body" class="form-control"></textarea>
              </div>

            </div>
            <div class="card-action">
              <button class="btn btn-success">Gönder</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>



