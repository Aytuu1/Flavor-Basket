@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Çıtır Restaurant Kayıt</title>
  <!-- Mobile Specific Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <!-- Font -->
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
  <!-- Main Style Css -->
  <link rel="stylesheet" href="styles.css" />
</head>
<body>
  <div class="container">
    <div class="form-container">
      <div class="form-image">
        <img src="~/regform/images/Pizza1.jpg">
      </div>
      <form class="form-content" method="post">
        <h2>Yeni Kullanıcı Kaydı</h2>
        <div class="form-group">
          <input type="text" id="full-name" class="input-field" placeholder="Adınız" asp-for="Name" required>
        </div>
        <div class="form-group">
          <input type="text" id="surname" class="input-field" placeholder="Soyadınız" asp-for="Surname" required>
        </div>
        <div class="form-group">
          <input type="text" id="username" class="input-field" placeholder="Kullanıcı Adınız" asp-for="Username" required>
        </div>
        <div class="form-group">
          <input type="email" id="email" class="input-field" placeholder="Email Address" asp-for="Mail" required>
        </div>
        <div class="form-group">
          <input type="password" id="password" class="input-field" placeholder="Şifreniz" asp-for="Password" required>
        </div>
        <button class="submit-btn" href="/Login/Index">Kayıt Ol</button>
      </form>
    </div>
  </div>
</body>
</html>
<style>
  body {
    font-family: 'Roboto', sans-serif;
    background-color: #f4f4f9;
    margin: 0;
    padding: 0;
  }

  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
  }

  .form-container {
    display: flex;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    overflow: hidden;
    max-width: 900px;
    width: 100%;
  }

  .form-image img {
    width: 500px;
    height: 500px;
  }

  .form-content {
    padding: 30px;
    width: 100%;
  }

    .form-content h2 {
      margin: 0 0 20px;
      font-size: 24px;
      color: #333;
    }

  .form-group {
    margin-bottom: 15px;
  }

  .input-field {
    width: 100%;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
    box-sizing: border-box;
  }

    .input-field:focus {
      border-color: #007bff;
      outline: none;
      box-shadow: 0 0 0 3px rgba(38,143,255,0.2);
    }

  .submit-btn {
    width: 100%;
    padding: 15px;
    background: linear-gradient(90deg, #007bff, #00d084);
    border: none;
    border-radius: 5px;
    color: #fff;
    font-size: 18px;
    cursor: pointer;
    transition: background 0.3s;
  }

    .submit-btn:hover {
      background: linear-gradient(90deg, #0056b3, #00b266);
    }

</style>