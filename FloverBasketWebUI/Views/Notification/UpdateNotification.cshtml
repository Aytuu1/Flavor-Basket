@model UpdateNotificationDto
@{
  ViewData["Title"] = "UpdateNotification";
  Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
  <div class="container-fluid">
    <h4 class="page-title">Bildirim İşlemleri</h4>
    <div class="row">
      <div class="col-md-12">
        <form method="post">
          <div class="card">
            <input type="hidden" asp-for="NotificationID"/>
            <div class="card-header">
              <div class="card-title">Bildirim Girişi</div>
              <div class="form-group">
                <label for="CategoryName">Bildirim Türü</label>
                <input type="text" class="form-control" asp-for="Type" id="Type">
              </div>
                <div class="form-group">
                  <label for="CategoryName">Bildirim Icon</label>
                  <input type="text" class="form-control" asp-for="Icon" id="Icon">
                </div>
                  <div class="form-group">
                    <label for="CategoryName">Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" id="Description">
                  </div>
                <div class="card-action">
                  <button class="btn btn-success">Kaydet</button>
                </div>
              </div>
        </form>
      </div>
    </div>
  </div>
</div>




